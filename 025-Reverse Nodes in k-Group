struct ListNode* reverseKGroup(struct ListNode* head, int k) {
    
    struct ListNode *current, *previous, *scout;
    int count;
    
    scout = current = head;
    previous = NULL;
    count = 0;

    while (scout) {
        
        ++count;

        if (k > 1 && count == k) {
            
            scout = scout->next;
            struct ListNode *first, *following;
            first = current;
            
            while (count-- > 1) {
                
                following = current->next;
                current->next = following->next;
                following->next = first;
                first = following;
            }
            
            if (previous)
                previous->next = first;
            else
                head = first;
                
            previous = current;
            current = scout;
            count = 0;
        }
        else
            scout = scout->next;
    }
    
    return head;
}
